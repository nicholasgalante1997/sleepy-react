{
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
    "git": {
      "commit": true,
      "commitMessage": "feat: release v${version}",
      "requireCleanWorkingDir": true,
      "tag": true,
      "tagAnnotation": "v${version}",
      "tagArgs": [],
      "push": true,
      "pushArgs": ["--follow-tags"]
    },
    "npm": {
        "allowSameVersion": false,
        "publish": true
    },
    "github": {
      "release": true
    }
  }