{
  "name": "react-sleepy",
  "version": "0.0.5",
  "author": "Nick Galante <nicholasgalante1997@gmail.com>",
  "license": "ISC",
  "packageManager": "pnpm@9.5.0",
  "files": [
    "dist"
  ],
  "main": "dist/bundle.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/bundle.js",
      "default": "./dist/bundle.js"
    },
    "./module": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/esm/bundle.mjs",
      "default": "./dist/esm/bundle.mjs"
    },
    "./dist/src/index.d.ts": "./dist/src/index.d.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "test": "jest",
    "prettier": "prettier --write src",
    "eslint": "eslint --fix \"./src/**/*\"",
    "lint": "npm-run-all -s eslint prettier",
    "build:exports": "node esbuild.config.cjs",
    "build:types": "tsc",
    "build": "npm-run-all -s clean build:*",
    "clean": "rm -rf dist",
    "release": "release-it"
  },
  "keywords": [
    "React",
    "Server Side Rendering",
    "Static Site Generation"
  ],
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.21.4",
    "eslint": "^9.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "release-it": "^17.6.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "sleepydogs": "^1.0.7"
  }
}
